        android:layout_height="30dp"
        android:layout_below="@+id/ageanswer"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Birthday"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/birthdayanswer"
        android:layout_below="@+id/birthdaytitle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:gravity="left"
        android:text="12 December"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/oshimark"
        android:layout_toRightOf="@+id/birthdaytitle"
        android:layout_below="@+id/weightanswer"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Oshi mark"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/oshiicon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/oshimark"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/ageanswer"
